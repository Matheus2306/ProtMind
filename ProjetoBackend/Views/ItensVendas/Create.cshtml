@model ProjetoBackend.Models.ItemVenda

@{
    ViewData["Title"] = "Criar";
    var estoque = ViewData["estoque"].ToString();
}
<div class="container">

    <h1>Produtos da Venda</h1>

    @if (estoque != "-200")
    {
        <div class="container alert-danger">
            <p></p>
        </div>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            Quantidade em Estoque Insuficiente! Quantidade Atual:  <strong>@estoque</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

    }

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" asp-route-id=@ViewData["VendaId"]>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">


                    <input asp-for="VendaId" type="hidden" class="form-control" value=@ViewData["VendaId"] />

                    <div class="col-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="Quantidade" class="control-label"></label>
                            <input asp-for="Quantidade" class="form-control" id="Quantidade" />
                            <span asp-validation-for="Quantidade" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md">
                        <div class="form-group">
                            <label asp-for="ProdutoId" class="control-label"></label>
                            <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId" id="produtoId">
                                <option>Selecione um Produto</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md">
                        <div class="form-group">
                            <label asp-for="ValorUnitario" class="control-label"></label>
                            <input asp-for="ValorUnitario" class="form-control" id="ValorUnitario" />
                            <span asp-validation-for="ValorUnitario" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md">
                        <div class="form-group">
                            <label asp-for="ValorTotal" class="control-label"></label>
                            <input asp-for="ValorTotal" class="form-control" id="ValorTotal" />
                            <span asp-validation-for="ValorTotal" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md mt-2">
                        <div class="btn w-100 btn-outline-danger">
                            <a asp-action="Index" class="text-decoration-none text-danger ">Cancelar</a>
                        </div>
                    </div>
                    <div class="d-sm-none d-md-block col-md-3 mt-2"></div>
                    <div class="col col-md mt-2">

                        <div class="form-group">
                            <input type="submit" value="Criar" class="btn btn-primary w-100" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}

<script>
    function limparFormulario() {
        // Limpar o campo de entrada "Quantidade"
        document.getElementById("Quantidade").value = "";

        // Resetar o campo de seleção "ProdutoId" para a opção padrão
        document.getElementById("produtoId").selectedIndex = 0;

        // Limpar o campo de entrada "ValorUnitario"
        document.getElementById("ValorUnitario").value = "";

        // Limpar o campo de entrada "ValorTotal"
        document.getElementById("ValorTotal").value = "";
    }

    // Executar a função no carregamento da página
    window.onload = function () {
        limparFormulario();
    };
</script>
