@model ProjetoBackend.Models.Servico

@{
    ViewData["Title"] = "Editar Serviços";
}
<div class="container">

    <h1>Editar Serviços</h1>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ServicoId" />
                <div class="row">
                    <div class="col-12 col-md-8 mt-2">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md mt-2">
                        <div class="form-group">
                            <label asp-for="ValorServico" class="control-label"></label>
                            <input type="number" step="0.01" asp-for="ValorServico" class="form-control" />
                            <span asp-validation-for="ValorServico" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md mt-2">
                        <a asp-action="Index" class="text-danger text-decoration-none btn btn-outline-danger w-100">Cancelar</a>
                    </div>
                    <div class="d-sm-none d-md-block col-md-3 mt-2"></div>
                    <div class="col-12 col-md mt-2">
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-primary w-100" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
