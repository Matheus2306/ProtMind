@model IEnumerable<ProjetoBackend.Models.Servico>

@{
    ViewData["Title"] = "Serviços";
}
<div class="container">

    <h1>Serviços</h1>

    <p>
        <a asp-action="Create" class="text-decoration-none text-light btn btn-lg btn-1">Cadastrar</a>
    </p>
    <table class="table table-dark table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorServico)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorServico)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ServicoId" class="text-primary text-decoration-none btn btn-outline-primary">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.ServicoId" class="text-danger text-decoration-none btn btn-outline-danger">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>