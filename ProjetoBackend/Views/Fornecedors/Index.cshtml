@model IEnumerable<ProjetoBackend.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}
<div class="container">

    <h1>Fornecedores</h1>

    <p>
        <a asp-action="Create" class="text-decoration-none text-light btn btn-lg btn-1">Cadastrar</a>
    </p>
    <table class="table table-dark talbe-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CnpjCpf)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CnpjCpf)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.FornecedorId" class="text-primary text-decoration-none btn btn-outline-primary">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.FornecedorId" class="text-danger text-decoration-none btn btn-outline-danger">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
