@model IEnumerable<ProjetoBackend.Models.ServicoVenda>

@{
    ViewData["Title"] = "Serviços Vendidos";
}
<div class="container">

    <h1>Vendas</h1>

    <p>
        <a asp-action="Create" class="text-decoration-none text-light btn-1 btn btn-lg">Cadastrar</a>
    </p>
    <table class="table table-dark table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Servico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Venda)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Servico.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venda.VendaId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ServicoId" class="text-primary text-decoration-none btn btn-outline-primary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.ServicoId" class="text-danger text-decoration-none btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>