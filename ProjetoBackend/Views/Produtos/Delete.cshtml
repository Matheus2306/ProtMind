@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Deletar";
}
<div class="container">

    <h1>Deletar</h1>


    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <div class="row justify-content-evenly">
            <dt class="col-12 col-md-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-12 col-md-2">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </div>
        <div class="row justify-content-evenly">
            <dt class="col-12 col-md-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-12 col-md-2">
                @Html.DisplayFor(model => model.Preco)
            </dd>
        </div>
        <div class="row justify-content-evenly">
            <dt class="col-12 col-md-2">
                @Html.DisplayNameFor(model => model.Estoque)
            </dt>
            <dd class="col-12 col-md-2">
                @Html.DisplayFor(model => model.Estoque)
            </dd>
        </div>
        <div class="row justify-content-evenly">
            <dt class="col-12 col-md-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-12 col-md-2">
                @Html.DisplayFor(model => model.Categoria.Nome)
            </dd>
        </div>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />
        <div class="row">

            <div class="col-12 col-md mt-2">
                <input type="submit" value="Delete" class="btn btn-danger w-100" />
            </div>
            <div class="d-sm-none d-md-block col-md-3 mt-2"></div>
            <div class="col col-md mt-2">
                <a asp-action="Index" class="text-decoration-none text-light btn btn-primary w-100">voltar</a>
            </div>
        </div>
    </form>
</div>
