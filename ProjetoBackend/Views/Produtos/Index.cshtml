@model IEnumerable<ProjetoBackend.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>

<p>
    <div class="btn btn-lg" style=" background:#DC5F00">
        <a asp-action="Create" class="text-decoration-none text-light">Cadastrar</a>
    </div>
</p>
<table class="table table-dark table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nome)
                </td>
                <td>
                    <div class=" btn btn-outline-primary">
                        <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="text-primary text-decoration-none">Editar</a>
                    </div>

                    <div class="btn btn-outline-danger">
                        <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="text-danger text-decoration-none">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
